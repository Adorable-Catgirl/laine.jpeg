<html prefix="og: http://ogp.me/ns#">
	<head>
		<title>Luna/{{board}}/ - New Thread</title>
		<meta name="board" content="{{board}}">
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@lunaboards" />
		<meta name="twitter:creator" content="@lunaboards_dev" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta property="og:title" content="/{{board}}/ - New Thread" />
		<meta property="og:site_name" content="Luna" />
		<meta property="og:url" content="http://lunaboards.xyz/{{board}}/new" />
		<meta property="og:image" content="http://lunaboards.xyz/static/assets/moooon.png" />
		<link rel="icon" type="image/png" href="/static/assets/moooon.png">
		<link rel=“preload” href=“/static/assets/neon_pixel-7.ttf” as=“font”>
		<link rel=“preload” href=“/static/assets/FSEX300.ttf” as=“font”>
		<script>
			function update() {
				document.onkeypress = function(e) {
					if (e.key == "Escape") {
						e.preventDefault();
						window.location.href = "https://lunaboards.xyz/"+board;
					}
				}
				if (isAndroid) {
					isAndroid = (navigator.userAgent == "Mozilla/5.0 (Android) LunaApp/1.0")
					document.getElementById("version").innerHTML = document.getElementById("version").innerHTML + " Mobile";
					document.getElementById("content").style.width = "95vw";//Math.round(android.getViewWidth()*0.98)+"px";
				}
			}
		</script>
		<script>
			var board = "{{board}}";

		</script>
		 <link rel="stylesheet" type="text/css" href="/static/assets/theme.css">
	</head>
	<body onload="update()">
		<small>[
		{{#boards}}
			<a href="/{{id}}">/{{id}}/</a>
		{{/boards}}
		 ]</small>
		<h1 class="Header"><a href="/{{board}}" class="hlink">New Thread</a></h1>
		<!--span>Title:</span><br>
		<input id="title" maxlength="30"><br>
		<span>Content:</span><br>
		<textarea id="content" rows="7" cols="50" style="resize: none;"></textarea><br>
		<input id="file" type="file" accept="image/*"><br>
		<button id="button" onclick="submit()">Submit</button><br-->
		<form id="post" action="/{{board}}/nt" method="post" enctype="multipart/form-data">
			<span>Title:</span><br>
			<input name="title" maxlength="40" autocomplete="false" required="true"><br>
			<span>Content:</span><br>
			<textarea name="content" rows="7" cols="30" style="resize: none;" autocomplete="off" maxlength="2000" required="true" form="post"></textarea><br>
			{{^noimg}}<input name="file" type="file" accept="image/*,video/webm"><br>{{/noimg}}
			<input type="hidden" name="board" value="{{board}}">
			<button type="submit">Submit</button>
		</form>
		<br>
		<small id="version">Laine.jpeg {{version}}</small>
	</body>
</html>
